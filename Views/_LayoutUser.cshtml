<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="=stylesheet" href="~/Contents/style.css" />
    <script src="~/Scripts/scripts.js"></script>
    <style>
        .footer {
            width: 100%;
            height: 50px;
            text-align: center;
            background-color: gray;
            padding: 15px 15px;
            bottom: 0px;
            position: fixed;
        }
    </style>
</head>
<body>
    <div class="menu">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/Home/User">FPT Book</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="/Home/User">Home</a></li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Category<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @foreach (var cat in ViewBag.Category)
                                {
                    <li><a href="~/Home/User/@cat.CategoryID">@cat.CategoryName</a></li>
}
                            </ul>
                        </li>
                    </ul>
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "navbar-form navbar-left" }))
                    {
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="search">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>}
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <img src="@Url.Content("~/Contents/images/shoppingcart.png")" style="height:40px;width:40px;padding-top:10px" />
                            @Html.Action("BagCart", "ShoppingCart")
                        </li>
                        <li><a><span class="glyphicon glyphicon-user"></span> Hi</a></li>
                        <li><a href="/Login/Index"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
    <div class="footer">
        Copy Allright 2022.
    </div>
</body>
</html>