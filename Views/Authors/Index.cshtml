@model IEnumerable<FPTBookS.Models.Author>

@{
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/jquery.validate.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.js"></script>

    <link rel="stylesheet" href="~/Contents/style.css" />
</head>
<body>
    <div class="form-login-1 ">
            <a class="title-form">
                <div colspan="2">Management Author</div>
            </a>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table-1" border="1px">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AuthorID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AuthorID })
            </td>
        </tr>
            }

        </table>
    </div>
</body>
</html>
